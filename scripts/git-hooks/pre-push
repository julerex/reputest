#!/bin/sh

# Pre-push hook to verify Rust code quality before allowing push
# Runs: format check, compilation check, and clippy linting

echo "Running pre-push checks..."

# Check formatting
echo "Checking code formatting..."
unset ARGV0 && cargo fmt --check
if [ $? -ne 0 ]; then
    echo >&2 "Error: Code formatting check failed. Run 'make format' to fix."
    exit 1
fi

# Check compilation
echo "Checking compilation..."
unset ARGV0 && cargo check
if [ $? -ne 0 ]; then
    echo >&2 "Error: Compilation check failed."
    exit 1
fi

# Check linting
echo "Checking linting..."
unset ARGV0 && cargo clippy --all-targets --all-features -- -D warnings
if [ $? -ne 0 ]; then
    echo >&2 "Error: Clippy linting check failed."
    exit 1
fi

echo "All checks passed!"
exit 0

