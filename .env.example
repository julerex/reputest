# Required for Twitter API integration
xapi_access_token=your_access_token_here

# Optional - for automatic token refresh
xapi_refresh_token=your_refresh_token_here
XAPI_CLIENT_ID=your_client_id_here
XAPI_CLIENT_SECRET=your_client_secret_here

# Optional - database
DATABASE_URL=postgres://user:password@localhost:5432/reputest

# Optional - encryption key for token storage (32-byte hex)
# Generate with: openssl rand -hex 32
TOKEN_ENCRYPTION_KEY=your_64_char_hex_key_here

# Optional - server config
PORT=3000
RUST_LOG=info
