# Reputest Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# =============================================================================
# DATABASE (Required)
# =============================================================================
# PostgreSQL connection string
DATABASE_URL=postgres://user:password@localhost:5432/reputest

# =============================================================================
# TOKEN ENCRYPTION (Required for production)
# =============================================================================
# 32-byte hex key for encrypting tokens in the database
# Generate with: openssl rand -hex 32
TOKEN_ENCRYPTION_KEY=your_64_character_hex_key_here

# =============================================================================
# TWITTER/X API (Required for Twitter functionality)
# =============================================================================
# OAuth 2.0 credentials - obtain from Twitter Developer Portal
# These are stored in the database after initial authorization

# For automatic token refresh (optional but recommended):
XAPI_CLIENT_ID=your_twitter_client_id
XAPI_CLIENT_SECRET=your_twitter_client_secret

# =============================================================================
# SERVER CONFIGURATION (Optional)
# =============================================================================
# Server port (default: 3000)
PORT=3000

# Log level: trace, debug, info, warn, error (default: info)
RUST_LOG=info
